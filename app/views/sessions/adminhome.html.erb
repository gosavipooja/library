      <div class="jumbotron">
        <form class="form-horizontal">
          <fieldset>
            <legend>Search for Rooms</legend>
            <div class="form-group">
              <label for="inputDate" class="col-lg-2 control-label">Date</label>
              <div class="col-lg-4">
                <input type="text" class="form-control" id="inputDate" placeholder="Date">
